---
import "../styles/global.css";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

// Importamos el componente para animaciones al pasar de una p√°gina a otra
import { ClientRouter } from "astro:transitions";

// Interface para titulos
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <title>{title}</title>
    <ClientRouter />
    <!-- Scripts para Flowbite -->
    <script src="../scripts/main.js"></script>
  </head>
  <body class="flex flex-col min-h-screen pt-20 font-Montserrat">
    <Header />
    <main class="container mx-auto flex-grow flex flex-col items-center">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: #13151a;
    color: #fff;
  }
</style>
